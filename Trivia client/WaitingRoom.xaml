<Window x:Class="Trivia_client.WaitingRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trivia_client"
        mc:Ignorable="d"
        Title="WaitingRoom" Height="400" Width="300">

    <Grid>
        <Button Content="Start Game"
                Name="start_game_button"
                HorizontalAlignment="Left"
                Margin="25,26,0,0"
                VerticalAlignment="Top"
                Click="Start_Game"
                Width="75"/>
        
        <Button Content="Leave Room"
                Click="leave_room"
                HorizontalAlignment="Left"
                Margin="174,69,0,0"
                VerticalAlignment="Top"
                Width="75"/>
        
        <Button Content="Update User List"
                Click="update_users_list"
                HorizontalAlignment="Left"
                Margin="25,70,0,0"
                VerticalAlignment="Top"
                Width="75"/>
        
        <ListBox HorizontalAlignment="Left"
                 Height="248"
                 Margin="10,111,0,0"
                 VerticalAlignment="Top"
                 Width="272"
                 Name="users_list"/>




    </Grid>
</Window>
